        update project
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="require != null">requires=#{require}</if>
            <if test="category != null">category=#{category}</if>
            <if test="reqnum != null">reqNum=#{reqnum}</if>
            <if test="nownum != null">nowNum=#{nownum}</if>
